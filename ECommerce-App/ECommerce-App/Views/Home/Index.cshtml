@model List<ECommerce_App.Models.ViewModels.FlummeryVM>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="home-header">
    <h1>Welcome to the Flummery Flummeries!</h1>
    <h2>Click below to view our products.</h2>
    <a asp-controller="Products" class="btn btn-dark" role="button">View Our Products (Non-Flums)</a>
</div>



<h2>Or try a few of our suggested Flummeries</h2>
<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-auto mb-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Manufacturer : @item.Manufacturer</p>
                        <p class="card-text">Price : @item.Price</p>
                        <p class="card-text">Calories : @item.Calories</p>
                        <p class="card-text">Weight : @item.Weight</p>
                        <p class="card-text">Compliment : @item.Compliment</p>
                        @*<a href="#" class="btn btn-primary">Details</a>*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>
