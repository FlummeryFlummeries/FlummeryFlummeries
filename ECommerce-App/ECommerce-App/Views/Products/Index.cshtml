@model List<ECommerce_App.Models.Flummery>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h2>Products</h2>
<div class="forms">
    <form asp-controller="Products">
        <select name="type">
            <option value="" disabled selected hidden>Sort By</option>
            <option value="alphabetical">Alphabetical (A-Z)</option>
            <option value="alphabeticalRev">Alphabetical (Z-A)</option>
            <option value="manufacturer">Manufacturer (A-Z)</option>
            <option value="manufacturerRev">Manufacturer (Z-A)</option>
        </select>
        <button type="submit" class="btn btn-dark">Sort Alphabetically</button>
    </form>

    <form asp-controller="Products" asp-action="Details">
        <div class="form-row align-items-center">
            <div class="col-auto">
                <label class="sr-only" for="search"></label>
                <input type="text" class="form-control mb-2" name="search" placeholder="All-Bran" required />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-dark">Search By Name</button>
            </div>
        </div>
    </form>
    <a asp-controller="Home" class="btn btn-dark" role="button">Return Home</a>
</div>

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-auto mb-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <img src="@item.ImageUrl" alt="Image of @item.Name" />
                        <p class="card-text">Compliment : @item.Compliment</p>
                        <p class="card-text">Manufacturer : @item.Manufacturer</p>
                        <p class="card-text">Price : @item.Price</p>
                        <p class="card-text">Calories : @item.Calories</p>
                        <p class="card-text">Fat : @item.Weight</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>