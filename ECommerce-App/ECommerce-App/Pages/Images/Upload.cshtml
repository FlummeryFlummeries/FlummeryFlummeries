@page "/Products/{id}/UploadImage"
@model ECommerce_App.Pages.Images.UploadModel
@{
    ViewData["Title"] = "Upload";
    Layout = "_Layout";
}

<h1>Upload an Image</h1>

<div class="container">
    <div class="card upload-card">
        <form method="post" class="flex" enctype="multipart/form-data">
            <div class="form-group">
                <h3 class="display-6">@Model.Name</h3>
            </div>
            @if (Model.CurrentImgUrl == null || !Model.CurrentImgUrl.Equals(""))
            {
                <div>
                    <p>Current Image</p>
                    <img src="@Model.CurrentImgUrl" alt="Image of @Model.Name" />
                </div>
            }
            <div class="form-group">
                <label asp-for="@Model.ImageFile">Upload image</label>
                <input type="file" class="form-control-file" asp-for="@Model.ImageFile" />
            </div>
            <button type="submit" class="btn btn-light">Upload Image</button>
        </form>
    </div>
</div>